<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.bobby_000.dcu_orientation">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".WeekOneActivity"
            android:label="@string/title_activity_week_one"
            android:parentActivityName=".HomeActivity"/>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".GameActivity"
            android:label="@string/title_activity_game"
            android:parentActivityName=".GameMenuActivity"/>
        <activity
            android:name=".ScoreActivity"
            android:label="@string/title_activity_score"
            android:parentActivityName=".GameMenuActivity"/>
        <activity
            android:name=".WeekTwoActivity"
            android:label="@string/title_activity_week_two"
            android:parentActivityName=".HomeActivity"/>
        <activity
            android:name=".WeekThreeActivity"
            android:label="@string/title_activity_week_three"
            android:parentActivityName=".HomeActivity"/>
        <activity
            android:name=".WeekFiveActivity"
            android:label="@string/title_activity_week_five"
            android:parentActivityName=".HomeActivity"/>
        <activity
            android:name=".MatchQuizActivity"
            android:label="@string/title_activity_match_quiz"
            android:parentActivityName=".GameMenuActivity"/>
        <activity
            android:name=".WeekFourActivity"
            android:label="@string/title_activity_week_four"
            android:parentActivityName=".HomeActivity">
        </activity>
        <activity
            android:name=".GameMenuActivity"
            android:label="@string/title_activity_game_menu"
            android:parentActivityName=".HomeActivity">
        </activity>
        <activity
            android:name=".GameOverActivity"
            android:label="@string/title_activity_game_over"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>